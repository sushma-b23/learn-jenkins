pipeline {
  agent any
  stages {
    stage('test') {
      steps {
       script {
         def abc = "Hello"
         def xyz = 10
         print "abc = ${abc}"
         print "xyz = ${xyz}"

         print abc
       }
       script {
         print "abc = ${abc}"
       }
      }
    }
    stage('test2') {
      steps {
        script {
          print "abc = ${abc}"
        }
      }
    }
  }
}